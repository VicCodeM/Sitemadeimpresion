<Window x:Class="SistemaImpresion.AppProduccion.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Sistema de Impresión - Producción" 
        Height="700" Width="900"
        WindowStartupLocation="CenterScreen"
        ResizeMode="CanResize">
    <Window.Resources>
        <Style TargetType="Button">
            <Setter Property="Background" Value="#667eea"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Padding" Value="15,8"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                CornerRadius="5"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#764ba2"/>
                </Trigger>
                <Trigger Property="IsEnabled" Value="False">
                    <Setter Property="Background" Value="#cccccc"/>
                </Trigger>
            </Style.Triggers>
        </Style>
        
        <Style TargetType="TextBox">
            <Setter Property="Padding" Value="10"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="BorderBrush" Value="#e0e0e0"/>
        </Style>
        
        <Style TargetType="Label">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="#333"/>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Encabezado -->
        <Border Grid.Row="0" Background="#667eea" Padding="20">
            <StackPanel>
                <TextBlock Text="Sistema de Impresión Zebra" 
                          FontSize="20" 
                          FontWeight="Bold" 
                          Foreground="White"
                          HorizontalAlignment="Center"/>
                <TextBlock x:Name="txtMaquina" 
                          Text="Máquina: Detectando..." 
                          FontSize="12" 
                          Foreground="White"
                          HorizontalAlignment="Center"
                          Margin="0,5,0,0"/>
            </StackPanel>
        </Border>

        <!-- Contenido Principal -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel Margin="30" HorizontalAlignment="Center" Width="400">
                <!-- Número de Empleado -->
                <Label Content="Número de Empleado:" Margin="0,0,0,5"/>
                <TextBox x:Name="txtNumeroEmpleado" 
                        MaxLength="20"
                        Margin="0,0,0,20"/>

                <!-- Cantidad -->
                <Label Content="Cantidad a Imprimir:" Margin="0,0,0,5"/>
                <TextBox x:Name="txtCantidad" 
                        MaxLength="5"
                        PreviewTextInput="SoloNumeros_PreviewTextInput"
                        Margin="0,0,0,20"/>

                <!-- Botón Imprimir -->
                <Button x:Name="btnImprimir" 
                       Content="IMPRIMIR" 
                       Click="BtnImprimir_Click"
                       Height="50"
                       Margin="0,10,0,0"/>

                <!-- Mensaje de Estado -->
                <Border x:Name="borderMensaje" 
                       BorderThickness="1" 
                       CornerRadius="5"
                       Padding="15"
                       Margin="0,20,0,0"
                       Visibility="Collapsed">
                    <TextBlock x:Name="txtMensaje" 
                              TextWrapping="Wrap"
                              FontSize="13"/>
                </Border>

                <!-- Información del Sistema -->
                <Border BorderBrush="#e0e0e0" 
                       BorderThickness="1" 
                       CornerRadius="5"
                       Padding="15"
                       Margin="0,30,0,0"
                       Background="#f9f9f9">
                    <StackPanel>
                        <TextBlock Text="Información del Sistema" 
                                  FontWeight="Bold" 
                                  FontSize="12"
                                  Margin="0,0,0,10"/>
                        <TextBlock x:Name="txtEstadoConexion" 
                                  Text="Estado: Verificando conexión..."
                                  FontSize="11"
                                  Foreground="#666"/>
                        <TextBlock x:Name="txtUltimaActividad" 
                                  Text="Última actividad: Ninguna"
                                  FontSize="11"
                                  Foreground="#666"
                                  Margin="0,5,0,0"/>
                    </StackPanel>
                </Border>
            </StackPanel>
        </ScrollViewer>

        <!-- Pie de Página -->
        <Border Grid.Row="2" Background="#f5f5f5" Padding="15" BorderBrush="#e0e0e0" BorderThickness="0,1,0,0">
            <StackPanel>
                <TextBlock Text="Sistema Industrial de Control de Impresión v1.0" 
                          FontSize="11" 
                          Foreground="#999"
                          HorizontalAlignment="Center"/>
                <TextBlock Text="sistema creado por ING Víctor Maldonado" 
                          FontSize="10" 
                          Foreground="#999"
                          HorizontalAlignment="Center"
                          Margin="0,2,0,0"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>
